{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "service-$name",
        "namespace": "$namespace"
    },
    "spec": {
        "selector": {
            "name": "$name"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP",
        "ports": [
            {
                "name": "$name",
                "port": 80,
                "protocol": "TCP",
                "targetPort": 80
            }
        ]
    },
    "status": {
        "loadBalancer": {}
    }
}